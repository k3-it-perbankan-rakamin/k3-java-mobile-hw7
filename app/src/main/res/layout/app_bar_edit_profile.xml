<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MyRakamin.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:contentDescription="Rakamin Icon"
                android:src="@drawable/rakamin"
                tools:srcCompat="@drawable/rakamin" />

            <Space
                android:layout_width="159dp"
                android:layout_height="35dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/iconhome" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/Theme.MyRakamin.PopupOverlay"
                app:theme="@style/Base.Theme.MyRakamin"


                />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/icontool" />

            <Space
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <include layout="@layout/editaja"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>